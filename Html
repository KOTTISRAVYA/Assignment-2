<script>
    const X = document.querySelector("input");
    const Y = document.querySelector("textarea");
    X.addEventListener("change",()=>{
        if(X.files[0].type!=="text/plain"){
            alert("please upload a valid text doc");
        }
        else{
            X.files[0].text().then(e=>{
                Y.value=e;
            });
        };
    });
</script>
